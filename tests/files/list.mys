@test
def test_for_loop_modify_integer():
    values = [1, 2]

    for value in values:
        value += 1

    assert values == [1, 2]

@test
def test_for_loop_modify_string():
    values = ["1", "2"]

    for value in values:
        value += "1"

    assert values == ["11", "21"]

class ForFoo:
    x: u64

@test
def test_for_loop_modify_class():
    values = [ForFoo(1), ForFoo(2)]

    for value in values:
        value.x += 1

    assert values[0].x == 2
    assert values[1].x == 3

@test
def test_for_loop_slice_modify_integer():
    values = [0, 1, 2, 3, 4]
    sliced: [i64] = []

    for value in slice(values, 1, 3):
        value += 1
        sliced.append(value)

    assert values == [0, 1, 2, 3, 4]
    assert sliced == [2, 3]

@test
def test_list_index_out_of_range():
    v = [1, 2]
    raised = False

    try:
        print(v[2])
    except IndexError:
        raised = True

    assert raised

@test
def test_negative_list_index():
    values = [0, 2, 4, 6]

    assert values[-1] == 6
    assert values[-2] == 4
    assert values[-4] == 0

    res = 0

    try:
        print(values[-5])
    except IndexError:
        res = 1

    assert res == 1
